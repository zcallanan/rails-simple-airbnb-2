<div class= "col-4 mb-4">
  <div class="card shadow">
    <img class="card-img-top" src=<%= flat.picture_url %> alt="image">
    <div class="card-body border-bottom">
      <h4 id="flat-name"><%= flat.name %></h4>
      <p class="card-text"><%= flat.address %></p>
      <div class="row">
        <div class="d-flex col-2">
          <div class=mr-2>
            <i class="fas fa-user-friends"></i>
          </div>
          <p class="p-margin"><%= flat.number_of_guests %></p>
        </div>
        <div class="d-flex col-2">
          <div class=mr-2>
            <i class="fas fa-euro-sign"></i>
          </div>
          <p class="p-margin"><%= flat.price_per_night %></p>
        </div>
      </div>
    </div>
    <div class="row justify-content-around align-items-center card-footer">
      <div class="col-5">
        <p class="p-margin"><%= link_to "More Info", flat_path(flat) %></p>
      </div>
      <div class="col-3">
        <p class="p-margin"><%= link_to "Edit", edit_flat_path(flat) %></p>
      </div>
      <div class="col-4">
        <p class="p-margin"><%= link_to "Remove", flat_path(flat), method: :delete, data: {
        confirm: 'Are you sure?' } %></p>
      </div>
    </div>
  </div>
</div>


